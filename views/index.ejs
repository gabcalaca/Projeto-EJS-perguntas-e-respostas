<%- include('partials/header.ejs') %>

<body>
    <%- include('partials/navbar.ejs') %>
    <h1></h1>

    <div class="container">

        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-dark">Perguntar</a>
        <br>

        <% perguntas.forEach(function(pergunta) { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id%>"><button class="btn btn-dark">Responder</button></a>
                    
                </div>
            </div>            
        <% }); %>    
    </div>
  
</body>

